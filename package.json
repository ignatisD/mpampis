{
  "name": "folderscanner",
  "version": "1.0.0",
  "productName": "Folder Scanner",
  "description": "A folder scanner app.",
  "main": "main.js",
  "engines": {
    "node": "14"
  },
  "scripts": {
    "start": "electron --inspect=5858 .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "linux": "electron-builder -l",
    "win": "electron-builder -w",
    "dist": "electron-builder -w -l",
    "release": "electron-builder -w -l"
  },
  "repository": "https://github.com/ignatisD/mpampis.git",
  "keywords": [],
  "author": "Ignatios Drakoulas <ignatios@drakoulas.gr>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^8.0.2",
    "electron-builder": "^22.3.5",
    "electron-connect": "^0.6.3"
  },
  "dependencies": {
    "electron-log": "^4.0.7",
    "electron-updater": "^4.2.2",
    "bootstrap": "^4.0.0",
    "font-awesome": "^4.7.0",
    "ngstorage": "^0.3.11",
    "popper.js": "^1.13.0"
  },
  "build": {
    "appId": "com.ignatisd.folderscanner",
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!.env",
      "!.github",
      "!.nvmrc",
      "!DEMO",
      "!builder.sh",
      "!README.md",
      "!**/*.xlsx",
      "!**/*.xml",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json,package-json.lock}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        },
        {
          "target": "portable",
          "arch": "ia32"
        }
      ],
      "icon": "build/icons/FolderScanner.ico",
      "publisherName": "Ignatios Drakoulas",
      "publish": [
        {
          "provider": "github"
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/256x256.png",
      "category": "Utility",
      "publish": [
        {
          "provider": "github"
        }
      ]
    }
  }
}
